<link rel="stylesheet" href="questions.scss">
<div class="center">
  <font size="5">
    英語に直しなさい<br/>
    第<%=session[:id]%>問</br>
  </font>
  <div class="question_english">
    <%= @question.jap%>
  </div>
  
<%= form_for(@question) do |f| %>
  答え:
  <%= f.text_field :reply %>
  <%= f.submit %>
<% end %>

  <body onLoad="countdown();">
    <%= image_tag 'tokei.jpg', :size => '30x30'%>
    <div id="target"><font size="5"></font></div>
  </body>
</div>

<script>
var count=10;
  function countdown() {
    var ele = document.getElementById("target");
    ele.innerHTML = count.toLocaleString();
    count--;
    if(count==0){
      location.href="/results/index";
      count=0;
    }
    window.setTimeout(countdown, 1000);
}
</script>