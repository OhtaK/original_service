<%= @question.jap%>

<%= form_for(@question) do |f| %>
  答え:
  <%= f.text_field :reply %>
  <%= f.submit %>
<% end %>

残り時間：<%= session[:time] %>
問題ID：<%=session[:id]%>
点数：<%=session[:score]%>

<script>
  var count = 10;
  var countdown = function(){
    console.log(count--);
  } 
  
  var id = setInterval(function(){
    countdown();
    if(count < 0){　
      clearInterval(id);　//idをclearIntervalで指定している．１秒ごとにsession[:time]を1減らすメソッドを呼び出したい
    }}, 1000);
</script>
